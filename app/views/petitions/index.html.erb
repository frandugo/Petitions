
<div  class="dashboard">
<p id="notice"><%= notice %></p>

<h1 class="title">Dashboard para responder las peticiones de los usuarios<br><span>Las petciones en estado cerrado ya han sido respondidas antes</span></h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cedula</th>
      <th>Fecha</th>
      <th>Email</th>
      <th>Direccion</th>
      <th>Pais</th>
      <th>Ciudad</th>
      <th>Descripcion</th>
      <th>Respuesta</th>
      <th>Estado</th>
      <% if user_signed_in? %><th colspan="3">Acciones</th><% end %>
    </tr>
  </thead>

  <tbody>
    <% @petitions.each do |petition| %>
      <tr>
        <td><%= petition.name %></td>
        <td><%= petition.identity %></td>
        <td><%= petition.date %></td>
        <td><%= petition.email %></td>
        <td><%= petition.direccion %></td>
        <td><%= petition.country %></td>
        <td><%= petition.city %></td>
        <td><%= petition.description %></td>
        <td><%= petition.amswer %></td>
        <td>
          <% if petition.state == true %>
            <span class="close">Cerrada</span>
          <% else %>
             <span class="open">Abierta</span>
          <% end %>  
        </td>
        <% if user_signed_in? %><td><%= link_to 'Mostrar', petition %></td><% end %>
        <% if user_signed_in? %><td><%= link_to 'Responder', edit_petition_path(petition) %></td><% end %>
        <% if user_signed_in? %><td><%= link_to 'Eliminar', petition, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

