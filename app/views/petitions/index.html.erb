<div  class="dashboard">
<p id="notice"><%= notice %></p>

<h1 class="title">Ver Peticiones</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cedula</th>
      <th>Fecha</th>
      <th>Email</th>
      <th>Direccion</th>
      <th>Pais</th>
      <th>Ciudad</th>
      <th>Descripcion</th>
      <th>Respuesta</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @petitions.each do |petition| %>
      <tr>
        <td><%= petition.name %></td>
        <td><%= petition.identity %></td>
        <td><%= petition.date %></td>
        <td><%= petition.email %></td>
        <td><%= petition.direccion %></td>
        <td><%= petition.country %></td>
        <td><%= petition.city %></td>
        <td><%= petition.description %></td>
        <td><%= petition.amswer %></td>
        <td><%= petition.state %></td>
        <td><%= link_to 'Mostrar', petition %></td>
        <td><%= link_to 'Responder', edit_petition_path(petition) %></td>
        <td><%= link_to 'Eliminar', petition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<%= link_to 'New Petition', new_petition_path %>

